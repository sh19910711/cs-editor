<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% unless flash.empty? %>
      <h1>System Messages</h1>
      <ul>
      <% flash.each do |t, m| %>
        <li><%= t %>: <%= m %></li>
      <% end %>
      </ul>
    <% end %>

    <%= yield %>
  </body>
</html>
