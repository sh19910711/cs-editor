<h1>Create new file for <%= @project.name %></h1>
<%= form_for [@project, @entity] do |f| %>
  <div><%= f.label :path %></div>
  <div><%= f.text_field :path %></div>
  <div>Content</div>
  <div><%= f.text_area :content %></div>
  <div><%= f.submit "Create" %></div>
<% end %>

<ul>
  <li><%= link_to 'Back', project_path(@project) %></li>
</ul>
